---
import Layout from '../layouts/Layout.astro';
import Navigation from '../components/Navigation.astro';
import Footer from '../components/Footer.astro';
import AnimatedAbout from '../components/AnimatedAbout';

const bio = {
  name: "Tanvay Nama",
  title: "Photography & Videography Professional",
  description: `Freelance photographer with 5+ years experience crafting visual stories for product, fashion, event, and lifestyle clients. Proficient in composition, lighting, and post-production (Adobe Lightroom and Photoshop) to produce clean, brand-aligned imagery. Work ranges from studio product shoots for e-commerce to on-location campaigns for restaurants and boutique fashion labels, handling concepts through final edit. Known for a collaborative, client-focused workflow that converts briefs into clear shot lists and meets timelines and budgets in fast-changing settings.`,
  experience: "5+ Years",
  location: "Mumbai, Maharashtra, India",
  email: "tanvayphotography@gmail.com",
  phone: "+91 7231952852"
};

const equipment = [
  { category: "Cameras", items: ["Canon EOS R5", "Sony A7 IV", "Canon EOS 5D Mark IV"] },
  { category: "Lenses", items: ["Canon RF 24-70mm f/2.8", "Sony 85mm f/1.4 GM", "Canon 70-200mm f/2.8"] },
  { category: "Video", items: ["DJI Ronin-S Gimbal", "Rode VideoMic Pro+", "Godox SL60W LED Lights"] },
  { category: "Accessories", items: ["Peak Design Tripod", "Godox Flash System", "Various ND & CPL Filters"] }
];

const skills = [
  {
    name: "Product Photography",
    description: "Studio product shoots for e-commerce with clean, brand-aligned imagery",
    icon: "fa-camera"
  },
  {
    name: "Fashion Photography",
    description: "On-location campaigns for boutique fashion labels with creative direction",
    icon: "fa-user-tie"
  },
  {
    name: "Event Coverage",
    description: "Professional documentation of corporate events and special occasions",
    icon: "fa-calendar-alt"
  },
  {
    name: "Food Photography",
    description: "Restaurant and cafe menu photography with perfect lighting and styling",
    icon: "fa-utensils"
  },
  {
    name: "Video Production",
    description: "Professional videography with cinematic storytelling and smooth editing",
    icon: "fa-video"
  },
  {
    name: "Post-Production",
    description: "Expert editing with Adobe Lightroom and Photoshop for polished results",
    icon: "fa-magic"
  }
];
---

<Layout title="About - Tanvay Nama" description="Learn about Tanvay Nama's photography journey, equipment, and expertise">
  <Navigation />

  <AnimatedAbout bio={bio} skills={skills} equipment={equipment} client:load />

  <Footer />
</Layout>
