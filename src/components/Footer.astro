---
const currentYear = new Date().getFullYear();

const socialLinks = [
  { name: 'Instagram', icon: 'fab fa-instagram', url: 'https://instagram.com/tanvayphotography' },
  { name: 'LinkedIn', icon: 'fab fa-linkedin', url: 'https://www.linkedin.com/in/tanvay-nama-369b48198/' },
];

const quickLinks = [
  { name: 'About', path: '/about' },
  { name: 'Portfolio', path: '/portfolio' },
  { name: 'Services', path: '/services' },
  { name: 'Contact', path: '/contact' },
];
---

<footer class="bg-dark-elevated border-t border-gray-800 mt-20">
  <div class="container mx-auto px-4 md:px-8 py-12">
    <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
      <!-- Brand Section -->
      <div>
        <h3 class="text-2xl font-bold text-gradient mb-4">TANVAY NAMA</h3>
        <p class="text-base text-light mb-2">
          Professional Photography & Videography
        </p>
        <p class="text-sm text-muted">
          5+ years crafting visual stories for product, fashion, event, and lifestyle clients.
        </p>
      </div>

      <!-- Quick Links -->
      <div>
        <h4 class="text-lg font-semibold mb-4">Quick Links</h4>
        <ul class="space-y-2">
          {quickLinks.map((link) => (
            <li>
              <a href={link.path} class="text-muted hover:text-accent transition-colors">
                {link.name}
              </a>
            </li>
          ))}
        </ul>
      </div>

      <!-- Contact & Social -->
      <div>
        <h4 class="text-lg font-semibold mb-4">Connect</h4>
        <div class="mb-4 space-y-3">
          <a href="mailto:tanvayphotography@gmail.com" class="flex items-center text-light hover:text-accent-primary transition-colors group">
            <i class="fas fa-envelope mr-3 text-accent-primary"></i>
            <span style="font-family: 'JetBrains Mono', monospace; font-size: 0.9rem;">tanvayphotography@gmail.com</span>
          </a>
          <a href="tel:+917231952852" class="flex items-center text-light hover:text-accent-primary transition-colors group">
            <i class="fas fa-phone mr-3 text-accent-primary"></i>
            <span style="font-family: 'JetBrains Mono', monospace; font-size: 0.9rem;">+91 7231952852</span>
          </a>
          <p class="flex items-center text-light">
            <i class="fas fa-map-marker-alt mr-3 text-accent-primary"></i>
            <span>Mumbai, India</span>
          </p>
        </div>

        <!-- Social Icons -->
        <div class="flex space-x-5">
          {socialLinks.map((social) => (
            <a
              href={social.url}
              target="_blank"
              rel="noopener noreferrer"
              class="w-10 h-10 rounded-full bg-accent-primary/10 border border-accent-primary/30 flex items-center justify-center text-accent-primary hover:bg-accent-primary hover:text-white transition-all"
              aria-label={social.name}
            >
              <i class={social.icon}></i>
            </a>
          ))}
        </div>
      </div>
    </div>

    <!-- Copyright -->
    <div class="border-t border-gray-800 mt-8 pt-8 text-center text-sm text-muted">
      <p>&copy; {currentYear} Tanvay Nama. All rights reserved.</p>
    </div>
  </div>
</footer>

<style>
  .text-accent {
    color: var(--accent-primary);
  }

  .text-muted {
    color: var(--text-muted);
  }

  .bg-dark-elevated {
    background-color: var(--bg-dark-elevated);
  }
</style>
